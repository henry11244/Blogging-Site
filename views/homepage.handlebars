<!-- Loop over each object in the projects array -->

{{!-- adding each blog --}}
{{#each blogs as |blog|}}
<div class="blogContainer">
    <h4 class="alert-heading">{{blog.title}}</h4>
    <p>{{blog.description}}</p>
    <hr>
    <p class="mb-0">Written by: {{user.username}}</p>
    <br>
    <div class="comment">
        <p><b>Comments:</b></p>

        {{!-- adding existing comments --}}
        {{#each comments as |comment|}}
        <div class="alert comment">

            <p class="mb-0">{{comment.commenter}}<span class="commenter">: {{comment.comment}}</span> </p>
        </div>
        {{/each}}
    </div>

    {{!-- new comment section --}}
    <form class="form newComment" data-id="{{blog.id}}">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">New Comment</span>
            </div>
            <textarea class="form-control" id=Comment{{blog.id}} aria-label="With textarea"></textarea>
        </div>
        <div class="form-group text-right">
            <button class="btn" type="submit" data-id="{{blog.id}}">Add Comment</button>
        </div>
    </form>

</div>
<br>

{{/each}}